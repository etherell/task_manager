<% if @project.errors.empty? %>
  $('#projects').prepend('<%= j render @project %>');
  $('.add-project-form-container').replaceWith('<%= j render 'projects/new' %>');

  setProjectFormValidation('.add-project-button', '.add-project-title');
  setFlatpickr('.add-task-deadline-<%= @project.id %>');
<% else %>
  $('.add-project-title').addClass('is-invalid');
<% end %>

