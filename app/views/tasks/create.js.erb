<% if @task.errors.messages.empty? %>
  <%# Adds task %>
  $('.tasks-container-<%= @project.id %>').append('<%= j render @task, task: @task, project: @project %>');

  <%# Clear form %>
  $('.add-task-description-<%= @project.id %>').val('').removeClass('is-invalid').removeClass('is-valid');
  $('.add-task-btn-<%= @project.id %>').prop('disabled', true);
<% else %>
  <%# Adds eror classes %>
  <% if flash[:error].include? 'Description' %>
    $('.add-task-description-<%= @project.id %>').addClass('is-invalid');
  <% end %>

  <% if flash[:error].include? 'Deadline' %>
    $('.add-task-deadline-<%= @project.id %>').addClass('is-invalid');
  <% end %>
<% end %>

